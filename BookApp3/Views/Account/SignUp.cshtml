@model BookApp3.ViewModels.SignUpViewModel



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Book Haven</title>
    <link rel="preconnected" href="https://fonts.googleapis.com">
    <link rel="preconnected" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
      
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--deep-blue);
            color: white;
            background-image: url('data:image/svg+xml;utf8,<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><circle cx="20" cy="20" r="2" fill="%23B8B8FF" opacity="0.2"/><circle cx="50" cy="30" r="1.5" fill="%23B8B8FF" opacity="0.2"/><circle cx="70" cy="10" r="2" fill="%23B8B8FF" opacity="0.2"/><circle cx="90" cy="50" r="1" fill="%23B8B8FF" opacity="0.2"/><circle cx="30" cy="80" r="1.5" fill="%23B8B8FF" opacity="0.2"/></svg>');
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
        }

        .signup-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            display: flex;
            align-items: center;
            min-height: calc(100vh - 200px);
        }

        .signup-card {
            background: rgba(26, 42, 58, 0.8);
            border-radius: 2rem;
            padding: 3rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            border: 1px solid var(--lavender);
            backdrop-filter: blur(5px);
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            transition: all 0.4s ease;
        }

            .signup-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(184, 184, 255, 0.1);
            }

        .signup-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

            .signup-header h2 {
                color: var(--gold);
                margin-bottom: 1rem;
                font-size: 2.2rem;
            }

            .signup-header p {
                color: var(--moonlight);
                opacity: 0.8;
            }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--lavender);
            font-weight: 600;
        }

        .form-control {
            width: 100%;
            padding: 0.8rem 1.2rem;
            background: rgba(180, 180, 255, 0.1);
            border: 1px solid rgba(180, 180, 255, 0.3);
            border-radius: 0.8rem;
            color: white;
            font-family: 'Montserrat', sans-serif;
            transition: all 0.3s;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--lavender);
                box-shadow: 0 0 0 3px rgba(184, 184, 255, 0.2);
                background: rgba(180, 180, 255, 0.15);
            }

            .form-control::placeholder {
                color: rgba(228, 230, 235, 0.6);
            }

        .btn-signup {
            background-color: var(--accent);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
            transition: all 0.3s ease;
            font-size: 1.1rem;
        }

            .btn-signup:hover {
                background-color: #ff7b8a;
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(255, 154, 162, 0.3);
            }

        .signup-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--moonlight);
        }

            .signup-footer a {
                color: var(--lavender);
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s;
            }

                .signup-footer a:hover {
                    color: var(--gold);
                    text-decoration: underline;
                }

        .input-icon {
            position: absolute;
            right: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--lavender);
            opacity: 0.7;
        }
    </style>
</head>
<body>

    <div class="signup-container">
        <div class="signup-card">
            <div class="signup-header">
                <h2><i class="fas fa-book-reader me-2"></i> Join</h2>
                <p>Start your literary journey with us today</p>
            </div>

            @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.User_Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.User_Name, new { @class = "form-control", placeholder = "Enter your full name" })
                    <i class="fas fa-user input-icon"></i>
                    @Html.ValidationMessageFor(m => m.User_Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                    <i class="fas fa-envelope input-icon"></i>
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Create a password" })
                    <i class="fas fa-lock input-icon"></i>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                    <i class="fas fa-lock input-icon"></i>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>

                <button type="submit" class="btn-signup">
                    Sign Up <i class="fas fa-arrow-right ms-2"></i>
                </button>
            }

            <div class="signup-footer">
                <p>Already have an account? <a href="@Url.Action("SignIn", "Account")">Sign in here</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

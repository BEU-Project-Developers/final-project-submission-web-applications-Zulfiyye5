@{
    ViewData["Title"] = "All Books";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnected" href="https://fonts.googleapis.com">
    <link rel="preconnected" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/home.css?v=1.0" />
    <style>
     

        :root {
            --deep-blue: #1a2a3a;
            --moonlight: #f0f4f8;
            --lavender: #b4b4ff;
            --gold: #ffd700;
            --accent: #ff9aa2;
            --brown: #8B4513;
            --text-primary: #333;
            --text-secondary: #666;
            --border: rgba(180, 180, 255, 0.2);
            --surface: rgba(255, 255, 255, 0.05);
            --elevated: rgba(255, 255, 255, 0.1);
            --accent-light: #ffb7bd;
        }


        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
        }

        .book-container {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .book-card {
            transition: all 0.3s ease;
            text-decoration: none;
            margin-bottom: 1.5rem;
            display: flex;
            flex-direction: column;
            height: 100%;
            position: relative;
        }

            .book-card:hover {
                transform: translateY(-10px);
            }

        .book-image-container {
            width: 100%;
            height: 220px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            background: rgba(0,0,0,0.1);
        }

        .book-card img {
            max-height: 100%;
            max-width: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
        }

        .book-title {
            margin-top: 0.8rem;
            font-weight: 600;
            color: white;
            flex-grow: 1;
            padding: 0 0.5rem;
            min-height: 3em; /* Ensure consistent title height */
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .book-actions {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem;
            margin-top: auto;
        }

        .btn-action {
            flex: 1;
            margin: 0 0.2rem;
            padding: 0.3rem 0.5rem;
            font-size: 0.75rem;
            border-radius: 4px;
            text-align: center;
        }

        .btn-edit {
            background-color: rgba(255, 193, 154, 0.2);
            color: var(--accent);
            border: 1px solid var(--accent);
        }

        .btn-delete {
            background-color: rgba(255, 99, 99, 0.2);
            color: #ff6363;
            border: 1px solid #ff6363;
        }

        .btn-add {
            background-color: var(--accent);
            color: white;
            border: none;
            padding: 0.8rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-add:hover {
                background-color: #ff7b8a;
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(255, 154, 162, 0.3);
            }

        .add-book-btn {
            margin-bottom: 30px;
        }

        .modal-content{
            background: var(--deep-blue);
            color: var(--moonlight);
            border: 1px solid var(--border);
        }
    </style>
</head>
<body>
    <main class="container py-4">
       
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <section class="my-5 py-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-center mb-0"><i class="fas fa-book me-3"></i> All Books</h2>
                <a href="#" class="btn btn-add add-book-btn">
                    <i class="fas fa-plus me-2"></i>Add New Book
                </a>
            </div>

            <div class="row">
                @foreach (var book in Model)
                {
                    <div class="col-6 col-md-4 col-lg-3 col-xl-2 mb-4 d-flex">
                        <div class="book-container w-100">
                            <div class="book-card">
                                <div class="book-image-container">
                                    <img src="@book.Cover_Url" alt="@book.Title">
                                </div>
                                <h6 class="book-title">@book.Title</h6>
                                <div class="book-actions">
                                    <a href="@Url.Action("Edit", "AdminAllBooks", new { id = book.Book_Id })" class="btn btn-action btn-edit">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>
                                    <button class="btn btn-action btn-delete"
                                            data-bs-toggle="modal"
                                            data-bs-target="#confirmDeleteModal"
                                            onclick="setDeleteId(@book.Book_Id, '@book.Title')">
                                        <i class="fas fa-trash me-1"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </main>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this book?</p>
                    <p class="text-danger">This action cannot be undone and will remove all associated reviews and user data.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" asp-action="Delete" asp-controller="AdminAllBooks" method="post">
                        <input type="hidden" id="bookIdToDelete" name="id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete Permanently</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function setDeleteId(bookId, bookTitle) {
            document.getElementById('bookIdToDelete').value = bookId;
            document.getElementById('bookTitleToDelete').textContent = bookTitle;
        }
    </script>

</body>
</html>
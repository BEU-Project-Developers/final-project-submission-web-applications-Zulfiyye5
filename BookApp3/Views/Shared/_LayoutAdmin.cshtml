
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookApp</title>

    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <nav>
        <div class="nav-bar-texts">
            <h1 class="nav-title">Admin Dashboard </h1>
            <div class="nav-links">
      
                <a asp-controller="AdminAllBooks" asp-action="Index">Books</a>

                <a asp-controller="AdminAllUsers" asp-action="Index">Users</a>
				<a asp-controller="AdminAllAuthors" asp-action="Index">Authors</a>
                <a asp-controller="Account" asp-action="Logout">Log out</a>
              
            </div>
        </div>





    </nav>
    <main>

        @RenderBody()
    </main>




    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
